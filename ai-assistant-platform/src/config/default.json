{
  "app": {
    "name": "AI Assistant Platform",
    "version": "0.1.0",
    "description": "Multi-tenant AI chat platform for corporate clients"
  },
  "ai": {
    "defaultModel": "gpt-4-turbo-preview",
    "defaultTemperature": 0.7,
    "defaultMaxTokens": 4096,
    "maxConversationMessages": 50,
    "systemPrompt": "You are a helpful AI assistant for corporate users. You provide clear, accurate, and professional responses. Be concise but thorough. If you're unsure about something, say so rather than making assumptions."
  },
  "features": {
    "feedback": {
      "enabled": true,
      "categories": [
        "helpful",
        "accurate",
        "creative",
        "unhelpful",
        "inaccurate",
        "inappropriate",
        "other"
      ]
    },
    "fileUploads": {
      "enabled": false,
      "maxSizeBytes": 10485760,
      "allowedTypes": ["image/png", "image/jpeg", "application/pdf"]
    },
    "conversationHistory": {
      "enabled": true,
      "maxConversations": 100
    },
    "streaming": {
      "enabled": true
    }
  },
  "ui": {
    "theme": {
      "defaultMode": "system",
      "primaryColor": "#18181b"
    },
    "chat": {
      "showTimestamps": true,
      "showTokenCount": false,
      "enableMarkdown": true
    }
  },
  "security": {
    "rateLimit": {
      "enabled": true,
      "maxRequestsPerMinute": 60
    },
    "contentModeration": {
      "enabled": true
    }
  }
}
